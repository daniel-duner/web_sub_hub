
FROM golang:1.13

RUN go get -u -v github.com/codeskyblue/fswatch

RUN mkdir -p /go/src/hub
WORKDIR /go/src/hub

RUN echo "desc: Auto generated by fswatch [hubd] \n\
triggers: \n\
- name: '' \n\
  pattens: \n\
  - '**/*.go' \n\
  env: \n\
    DEBUG: '1' \n\
  cmd: go run /go/src/hub/*.go \n\
  shell: true \n\
  delay: 100ms \n\
  stop_timeout: 500ms \n\
  signal: KILL \n\
  kill_signal: '' \n\
watch_paths: \n\
- . \n\
watch_depth: 10 \n\
" >> /fsw.yml

CMD fswatch -config /fsw.yml